<!DOCTYPE html>
<html lang="zh-Hans">

<head>
    <meta charset="utf-8">
    <title>IOT CARD</title>
    <style>
        tr {
            height: 1.8rem;
        }
        td {
            padding-left: 50px;
        }
    </style>
</head>

<body>
    <div style="display:flex;justify-content: center; align-items:center;">
        <table class="table table-hover table-mc-light-blue">
            <th></th>
            <tr>
                <td>余额</td>
                <td>{{ digest.get("balance") }}元</td>
            </tr>
            <tr>
                <td>ICCID</td>
                <td>{{ digest.get("iccid") }}</td>
            </tr>
            <tr>
                <td>卡号</td>
                <td>{{ digest.get("card") }}</td>
            </tr>
            <tr>
                <td>手机号</td>
                <td>{{ digest.get("phone") }}</td>
            </tr>
            <tr>
                <td>运营商</td>
                <td>{{ digest.get("isp") }}</td>
            </tr>
            <tr>
                <td>套餐</td>
                <td>{{ digest.get("plan") }}</td>
            </tr>
            <tr>
                <td>网卡状态</td>
                <td>{{ digest.get("status") }}</td>
            </tr>
            <tr>
                <td>过期时间</td>
                <td>{{ digest.get("expired") }}</td>
            </tr>
            <tr>
                <td>总流量</td>
                <td>{{ (digest['total']/1024)|round(2) }} GB({{ digest['total']|round(2) }} MB)</td>
            </tr>
            <tr>
                <td>已用流量</td>
                <td>{{ (digest['usage']/1024)|round(2) }} GB({{ digest['usage']|round(2) }} MB)</td>
            </tr>
            <tr>
                <td>已用流量</td>
                <td>{{((digest['total']-digest['usage'])/1024)|round(2) }} GB
                    ({{ (digest['total']-digest['usage'])|round(2) }} MB)</td>
            </tr>
            <tr>
                <td>次月</td>
                <td>{{ "已续费" if digest.get('renewal') else "未续费" }}</td>
            </tr>
        </table>
    </div>
</body>

</html>